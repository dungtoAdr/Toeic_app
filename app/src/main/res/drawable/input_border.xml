<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Viền màu xanh -->
    <stroke android:width="2dp" android:color="@color/tool_bar" />

    <!-- Góc bo tròn -->
    <corners android:radius="8dp" />

    <!-- Màu nền trắng -->
    <solid android:color="@android:color/white" />

    <!-- Padding bên trong -->
    <padding
        android:left="12dp"
        android:top="8dp"
        android:right="12dp"
        android:bottom="8dp" />

</shape>
